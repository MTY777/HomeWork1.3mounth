<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/car_yellow"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_car"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tv_thr"
        android:layout_marginTop="16dp"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:textColor="@color/black"
        android:fontFamily="@font/abc_123"
        android:text="HELLO THERE,
        WELCOME BACK"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/car_yellow"
        app:layout_constraintStart_toStartOf="@id/car_yellow"/>

    <TextView
        android:id="@+id/singim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to continue"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_thr"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/si_btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/nim"
        android:inputType="text"
        android:padding="20dp"
        android:text="Inp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/singim"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#0000"
        android:text="Username"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/si_btnSignIn"
        app:layout_constraintStart_toStartOf="@id/si_btnSignIn"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/si_btnSignIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        app:passwordToggleEnabled="true"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/si_btnSignIn"
        app:layout_constraintEnd_toEndOf="@id/si_btnSignIn"
        app:layout_constraintStart_toStartOf="@id/si_btnSignIn">



    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/nim"
        android:inputType="textPassword"
        android:padding="20dp"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/si_btnSignIn"
        />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:background="#0000"
        android:text="Password"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/si_btnSignIni"
        app:layout_constraintStart_toStartOf="@id/si_btnSignIn" />

    <TextView
        android:id="@+id/fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:text="FORGET PASSWORD?"
        app:layout_constraintTop_toBottomOf="@id/si_btnSignIni"
        app:layout_constraintEnd_toEndOf="@id/si_btnSignIni"/>

    <Button
        android:id="@+id/butn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="GO!"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/fp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW USER? SIGN UP"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/butn"
        app:layout_constraintStart_toStartOf="@id/butn"
        app:layout_constraintEnd_toEndOf="@id/butn"/>


</androidx.constraintlayout.widget.ConstraintLayout>